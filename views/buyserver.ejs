		<script src="/assets/js/fuelux/fuelux.spinner.js"></script>
		<script>
		var opts = {            
        lines: 12, // 花瓣数目
        length: 7, // 花瓣长度
        width: 2, // 花瓣宽度
        radius: 5, // 花瓣距中心半径
        corners: 1, // 花瓣圆滑度 (0-1)
        rotate: 0, // 花瓣旋转角度
        direction: 1, // 花瓣旋转方向 1: 顺时针, -1: 逆时针
        color: '#FFF', // 花瓣颜色
        speed: 1, // 花瓣旋转速度
        trail: 30, // 花瓣旋转时的拖影(百分比)
        shadow: false, // 花瓣是否显示阴影
        hwaccel: false, //spinner 是否启用硬件加速及高速旋转            
        className: 'spinner', // spinner css 样式名称
        zIndex: 2e9, // spinner的z轴 (默认是2000000000)
        top: 'auto', // spinner 相对父容器Top定位 单位 px
        left: '50%'// spinner 相对父容器Left定位 单位 px
    };

    var spinner = new Spinner(opts);
          function calculate() {
            var cal = 60;
            cal = parseInt(cal + ($('#hdd').val()-10)/49 * 10 + Number($('#band').val()) + ($('input[name="cpu"]:checked').val()/2-0.5)*20 + ($('input[name="mem"]:checked').val()-1)*10) * $('input[name="month"]:checked').val() * $('input[name="amount"]').val();
            $('.price i').html(cal);
          }
		$(function () {
			var hdd_slider = $( "#hdd-slider" ).css({'margin-top': '12px' ,'margin-left': '5px'}).slider({
		    value:10,
		    range: "min",
		    min: 10,
		    max: 500,
		    step: 10,
		    animate: "slow",
		    slide: function( event, ui ) {
		      var val = parseInt(ui.value);
		      $('#hdd').val(val);
              calculate();
		    }
		  });
		  var band_slider = $( "#band-slider" ).css({'margin-top': '12px' ,'margin-left': '5px'}).slider({
		    value: 0,
		    range: "min",
		    min: 0,
		    max: 100,
		    step: 1,
		    animate: "slow",
		    slide: function( event, ui ) {
		      var val = parseInt(ui.value);
		      $('#band').val(val);
              calculate();
		    }
		  });
		  $('#hdd').on('change', function () {
		  	var val = $(this).val();
		  	if (val < 10) val = 10;
		  	else if (val > 500) val = 500;
		  	hdd_slider.slider('value', val);
		  	$(this).val(val);
            calculate();
		  });
		  $('#band').on('change', function () {
		  	var val = $(this).val();
		  	if (val < 0) val = 0;
		  	else if (val > 100) val = 100;
		  	band_slider.slider('value', val);
		  	$(this).val(val);
            calculate();
		  });
		  $('#system').chosen();
		  $('#system').on('change', function () {
		  	console.log($(this).val());
		  });
		  $('#amount').ace_spinner({
			  min: 1,
        max: 100,
        step: 1,
        icon_up: 'fa fa-plus',
	      icon_down: 'fa fa-minus',
			  btn_up_class: 'btn-white btn-spinner',
			  btn_down_class: 'btn-white btn-spinner',
			  on_sides: true
			});
			$('#months label').on('click', function () {
				if ($(this).hasClass('month')) {
					$('#months span.text').remove();
					$(this).append('<span class="text">个月</span>');
				}
			});
			$('#othermonth a').on('click', function (e) {
				e.preventDefault();
				$('#months label').removeClass('hide');
				$('#othermonth').hide();
			});
            $('input').on('change', function () {
              calculate();
            });
			$('form').on('submit', function (e) {
				e.preventDefault();
				var data = {};
				$(this).find('input').each(function () {
					if (!$(this).attr('name')) return true;
					if ($(this).attr('type') == 'radio') {
						if ($(this)[0].checked) {
							data[$(this).attr('name')] = $(this).val();
						}
					}
					else {
						data[$(this).attr('name')] = $(this).val();

					}
				});
				$(this).find('select').each(function () {
					data[$(this).attr('name')] = $(this).val();
				});
				console.log(data);
              data.price = $('.price i').html();
				$('#buy').html('').css({'height': '42px', 'width': '85px'}).addClass('disabled');
				$('#reset').addClass('disabled');
				spinner.spin($('#buy')[0]);

				$.post('/buyserver', data, function (data) {
					if (!data.status) {
						spinner.spin();
						$('#buy').html('购买<i class="ace-icon fa fa-check icon-on-right bigger-110"></i>').removeClass('disabled');
						$('#reset').removeClass('disabled');
						$.gritter.add({
							title: '购买失败',
							text: '错误: ' + data.error,
							class_name: 'gritter-danger gritter-center gritter-light'
						});
					}
					else {
						$.gritter.add({
							title: '购买成功',
							text: '您已成功购买新的云主机，将自动跳转到主机页面...',
							class_name: 'gritter-success gritter-center gritter-light'
						});
						setTimeout(function () {
							window.location.href = '/instances';
						}, 3000);
					}
				});
			});
			$('#reset').on('click', function () {
				$('form input').each(function () {
					if ($(this).attr('name') == 'cpu') {
						if ($(this).val() == 1) {
							$(this).closest('label').click();
						}
					}
					else if ($(this).attr('name') == 'mem') {
						if ($(this).val() == 1) {
							$(this).closest('label').click();
						}
					}
					else if ($(this).attr('name') == 'hdd') {
						$(this).val('10');
		  			hdd_slider.slider('value', 10);
					}
					else if ($(this).attr('name') == 'band') {
						$(this).val('0');
		  			band_slider.slider('value', 0);
					}
					else if ($(this).attr('name') == 'amount') {
						$(this).val('1');
						$('#amount').ace_spinner('value', 1);
					}
					else if ($(this).attr('name') == 'month') {
						if ($(this).val() == 1) {
							$(this).closest('label').click();
						}
					}
				});
			});
		});
		</script>
